@using WebApp.ViewModels
@model AddUserViewModel

@{
    ViewBag.Title = "Register";
}

@if (User?.Identity?.IsAuthenticated == false)
{
    <div class="justify-content-center">
        <form method="post" asp-controller="Home" asp-action="Register">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row my-1">
                <label class="col-2" asp-for="User.Email"></label>
                <input class="col-6" type="text" asp-for="User.Email"></input>
            </div>
            <div class="row my-1">
                <label class="col-2" asp-for="User.Password"></label>
                <input class="col-6" type="password" asp-for="User.Password"></input
            </div>
            <div class="row my-1">
                <label class="col-2" asp-for="User.RoleId"></label>
                <select class="col-6" asp-for="User.RoleId" asp-items="@(new SelectList(Model.Roles, nameof(Role.Id), nameof(Role.Name)))"></select>
            </div>
            <div class="row my-1">
                <div class="d-flex justify-content-center col-8">
                    <input class="btn btn-primary" type="submit" value="Register"></input>
                </div>
            </div>
        </form>
    </div>
}