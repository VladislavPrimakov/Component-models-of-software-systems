@model UserViewModel

@{
    ViewBag.Title = "Login";
}

@if (User?.Identity?.IsAuthenticated == false)
{
    <div class="justify-content-center">
        <form method="post" asp-controller="Home" asp-action="Login">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row my-1">
                <label class="col-2" asp-for="Email"></label>
                <input class="col-6" type="text" asp-for="Email"></input>
            </div>
            <div class="row my-1">
                <label class="col-2"  asp-for="Password"></label>
                <input class="col-6" type="password" asp-for="Password"></input
            </div>
            <div class="row my-1">
                <div class="d-flex justify-content-center col-8">
                    <input class="btn btn-primary" type="submit" value="Login"></input>
                </div>
            </div>
        </form>
    </div>
}